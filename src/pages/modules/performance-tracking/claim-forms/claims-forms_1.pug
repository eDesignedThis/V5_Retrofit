extends ../../../../master-templates/template__width__slim.pug

block styles

block meta-title
    title Claims Submission Form - 1


block header
    include ../../../../master-templates/headers/header--1/header__1__private.pug

block content
    .row 
        .col-12
            h1 Submit A Claim
            p Please complete the fields below. Fields marked with * are required.
        .col-12
            .alert.alert-info
                small.mb-0 
                    span.font-weight-bold Admin Messaging Area
                    |   This area is reserved for any special text required by the A.M or whoever is setting up the claim form. This can also be hidden if no special instructions are necessary.
    .row.text-left 
        .col-12
            form.mb-0(action="")
                .form-group
                    label(for="customer_company") Customer Company
                    input#customer_company.form-control(type="text" required)
                .form-group
                    label(for="customer_phone") Customer Phone
                    input#customer_phone.form-control(type="text" required)
                .form-group
                    label(for="invoice_number") Invoice Number
                    input#invoice_number.form-control(type="text" required)
                .form-group
                    label(for="sale_date") Sale Date
                    .input-group.date
                        input#sale_date.form-control(type="text" required)
                        .input-group-append
                            span.input-group-text
                                span.fas.fa-calendar
                .form-group.text-right
                    a#add-product(href="#") Add Product
                        span.ml-1.fas.fa-plus-circle
        .col-12#add_product_wrapper
                .form-group
                    h2.border-bottom Add Your Product
                .form-group
                    label(for="product_quantity") Quantity
                    input#product_quantity.form-control(type="text" required)
                .form-group
                    label(for="product_code") Product Code
                        span.ml-1
                            small
                                a#product_lookup_link(href='#', data-toggle='modal', data-target='#product_lookup_modal') (Product Lookup)
                    input#product_code.form-control(type="text" required)
                    include ../../../../master-templates/components/modals/product__lookup__modal.pug
                .form-group
                    label(for="product_description") Product Description
                    textarea#product_description.form-control
                .form-group
                    label(for="sale_amount") Sale Amount
                    input#sale_amount.form-control(type="text" required)
                .form-group.mb-0
                    .row.justify-content-center 
                        .col-6.col-sm-4
                            a.btn.btn-outline-primary.btn-block#cancel_add_product(href="#") Cancel
                        .col-6.col-sm-4
                            a.btn.btn-primary.btn-block#add_product_btn(href="#") Add Product
                        
       
                        
       
