// Modal
#product_lookup_modal.modal.fade(tabindex='-1', aria-labelledby='product_lookup_modalLabel', aria-hidden='true')
    .modal-dialog.modal-dialog-centered.modal-dialog-scrollable
        .modal-content
            .modal-header
                h6#product_lookup_modalLabel.modal-title Product Lookup
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') &times;
            .modal-body
                p Select one of the eligible products from the list below.
                ul.list-group.list-group-flush#product-list
                    li.list-group-item.d-flex.justify-content-between.align-items-center
                        .text-left
                            .fas.fa-bolt.text-warning.mr-3
                            span Product One
                        a(href='#') abc123
                    li.list-group-item.d-flex.justify-content-between.align-items-center
                        .text-left
                            .fas.fa-bolt.text-warning.mr-3
                            span Product Two
                        a(href='#') def456
                    li.list-group-item.d-flex.justify-content-between.align-items-center
                        .text-left
                            .fas.fa-bolt.text-warning.mr-3
                            span Product Three
                        a(href='#') ghi789
                    li.list-group-item.d-flex.justify-content-between.align-items-center
                        .text-left
                            .fas.fa-bolt.text-warning.mr-3
                            span Product Four
                        a(href='#') jkl111213
                        
            .modal-footer
                button.btn.btn-primary(type='button', data-dismiss='modal') Close